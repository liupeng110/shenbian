<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/nocircleblackclose"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:text="发布文章"
            android:textColor="#333"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="发布"
            android:textColor="#dd544d"
            android:textSize="15sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cfcfcf"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/title_edt"
        android:layout_width="match_parent"
        android:hint="请输入标题"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:background="@drawable/publish_service_desc_back"
        android:layout_height="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layerType="software"
        android:background="@drawable/publish_article_title_line"/>

    <com.henlinkeji.shenbian.base.view.PictureAndTextEditorView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start"
        android:padding="5dp"
        android:hint="请编辑正文"
        android:background="@null"
        android:textSize="13sp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/add_picture"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="图片"/>

        <TextView
            android:id="@+id/add_classfy"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="分类"/>

        <TextView
            android:id="@+id/add_position"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="位置"/>
    </LinearLayout>


</LinearLayout>