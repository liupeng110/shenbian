<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2a9a9f"
    tools:context="com.henlinkeji.shenbian.LoginActivity">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="15dp"
        android:src="@mipmap/nocircleclose"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="输入手机号"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:background="@null"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:textColorHint="#cfcfcf"
            android:textSize="15sp" />

        <Button
            android:id="@+id/register_retrieve_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="@null"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login_phone"
            android:background="#cfcfcf" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/login_phone"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:hint="验证码"
            android:paddingLeft="15dp"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:textColorHint="#cfcfcf"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/login_password"
            android:background="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="#9bc035"
            android:gravity="center"
            android:text="登  录"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:textSize="17sp" />
    </LinearLayout>


</LinearLayout>
