<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009698"
    android:orientation="vertical"
    tools:context="com.henlinkeji.shenbian.LoginActivity">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:src="@mipmap/nocircleclose"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher_round"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#fff">

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="输入手机号"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:textColorHint="#cfcfcf"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/register_retrieve_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:text="获取验证码"
            android:textColor="#009698"
            android:textSize="14sp"
            />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/login_phone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#cfcfcf"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/login_phone"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColorHint="#cfcfcf"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/login_password"
            android:layout_marginBottom="10dp"
            android:background="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_back"
            android:gravity="center"
            android:text="登  录"
            android:textColor="#fff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="温馨提示：未注册身边的手机号，登录时将自动注册，且代表您已同意《用户服务协议》"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="第三方登录"
            android:textColor="#666"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
