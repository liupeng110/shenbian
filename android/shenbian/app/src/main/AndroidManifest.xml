<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.henlinkeji.shenbian">

    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 用于获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 用于写入缓存数据到扩展存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>

    <!-- 用于申请获取蓝牙信息进行室内定位 -->
    <application
        android:name=".base.application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="720"/>
        <meta-data
            android:name="design_height"
            android:value="1280"/>

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PermissionsActivity">
        </activity>

        <service android:name="com.amap.api.location.APSService"/>

        <!-- //开发者申请的key -->
        <!-- <meta-data android:name="com.amap.api.v2.apikey" -->
        <!-- android:value="ffbf111a20d3a758668c24500a13132d"/> -->
        //刘个人申请的key
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="34423cb4bad3604056560110d70cad68"/>

        <activity android:name=".LoginActivity">
        </activity>
        <activity
            android:name=".AddArticleActivity"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".SelectPositionActivity">
        </activity>
        <activity android:name=".AddServiceActivity">
        </activity>
        <activity android:name=".ServiceDetailActivity">
        </activity>
        <activity android:name=".SelectCityActivity">
        </activity>
        <activity android:name=".SearchActivity">
        </activity>
    </application>

</manifest>