<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f6f6f6"
    tools:context="com.henlinkeji.shenbian.EditInfoActivity">
    <include
        layout="@layout/toolbar_text_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#3f3f3f">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="发布后，商店信息可在“我的-资料设置”中修改。"
                    android:textColor="#999"
                    android:textSize="15sp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/shop_avator_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商店头像"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/shop_avator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:scaleType="fitXY"
                    fresco:placeholderImage="@mipmap/default_avar"
                    fresco:roundAsCircle="true"
                    fresco:roundedCornerRadius="1dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_name_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商店名称"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="身边"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_tag_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商店标签"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_tag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="未填写"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_type_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="服务类别"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="未填写"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_intr_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商店简介"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_intr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="未填写"
                    android:visibility="gone"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:src="@mipmap/arrow_right"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/shop_intr_et"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shop_info_intr_back"
                android:gravity="left"
                android:hint="最多300字"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:textColor="#a2a5aa"
                android:textColorHint="#d9d9d9"
                android:textSize="15dp"
                />

            <RelativeLayout
                android:id="@+id/shop_address_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商店地址"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="未填写"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_phone_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="联系电话"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="未填写"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="#ebebeb"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shop_account_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="收款账户"
                    android:textColor="#2d333a"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/shop_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:scaleType="fitXY"
                    android:text="未填写"
                    android:textColor="#a2a5aa"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/arrow_right"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
