<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.henlinkeji.shenbian.LookServiceActivity">

    <include
        layout="@layout/toolbar_img_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/classfy_tablayout"
            android:layout_width="match_parent"
            app:tabIndicatorColor="#009698"
            app:tabSelectedTextColor="#009698"
            app:tabTextColor="#4f5965"
            android:layout_marginRight="30dp"
            android:layout_height="48dp"/>
        <ImageView
            android:id="@+id/classfy_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="#fff"
            android:src="@mipmap/arrow_down"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/classfy_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
