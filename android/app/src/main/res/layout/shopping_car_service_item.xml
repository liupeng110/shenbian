<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_service_detail"
              android:layout_width="match_parent"
              android:layout_height="107dp"
              android:background="#ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/shopping_service_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:button="@drawable/check_box_bg"
         />

        <ImageView
            android:id="@+id/shopping_service_item_img"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopping_service_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#2d333a"
                android:textSize="15dp"/>


            <TextView
                android:id="@+id/shopping_service_item_intr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4f5965"
                android:textSize="13dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/shopping_service_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:textColor="#df8a7e"
                    android:textSize="13dp"/>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bg_amount_layout"
                    android:divider="@drawable/divider"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <Button
                        android:id="@+id/btnDecrease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_amount"
                        android:gravity="center"
                        android:text="-"/>

                    <EditText
                        android:id="@+id/num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="1"
                        android:focusable="false"
                        android:inputType="number"/>

                    <Button
                        android:id="@+id/btnIncrease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_amount"
                        android:gravity="center"
                        android:text="+"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
